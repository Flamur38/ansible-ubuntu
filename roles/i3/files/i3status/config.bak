general {
    colors = true
    interval = 5
}

order += "ethernet tun0"
order += "ethernet _first_"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

ethernet tun0 {
    format_up = "VPN: %ip"
    format_down = "VPN: down"
}

ethernet _first_ {
    format_up = "E: %ip"
    format_down = "E: down"
}

disk "/" {
    format = "disk: %avail"
}

load {
    format = "load: %1min"
}

memory {
    format = "mem: %used | %available"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

